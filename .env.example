# Azure OpenAI Configuration
# Get API key from Azure Portal
AZURE_OPENAI_API_KEY=your_api_key_here

# Azure OpenAI service endpoint
# Example: https://your-resource.openai.azure.com
AZURE_OPENAI_ENDPOINT=your_endpoint_here

# Azure OpenAI deployment name
# Model deployment name created in Azure Portal
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here

# Azure OpenAI API version
# Current supported versions: 2025-04-01-preview, 2025-01-01-preview
AZURE_OPENAI_API_VERSION=2025-04-01-preview

# Application Configuration
# Development server port
PORT=3000

# Debug mode
# Set to true to enable verbose logging
DEBUG=false

# MongoDB Configuration (Optional)
# If not configured, flows will only be saved locally
# MongoDB connection string format: mongodb://[username:password@]host[:port]/database
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb://localhost:27017/ideacanvas

